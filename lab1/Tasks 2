#include <iostream>
#include <string>
using namespace std;
int main()
{ 
    double L; 
       
    cout << "Enter diameter : " << endl;
    cin >>L;
    do {
    if (L>0) {
    cout << "Length is : " << L*3.14 << endl;
    break;
    } else {
        cout << "Incorrect data!" << endl;
    }
    }while(true);
     return 0; 
}
