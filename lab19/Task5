#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m;
	double sum;

	do {

		cout << "Введите порядок квадратной матрицы M ( M > 0) : ";
		cin >> m;
		cout << endl;

	} while (m < 0);

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) {
		matrix[i] = new double[m];
	}

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++) {
		for (int j = 0; j < m; j++) {
			cin >> matrix[i][j];
		}
	}

	for (int i =1;i<=m;i++){
	    sum=0;
	    for (int j=0;j<i;j++){
	        sum+=matrix[j][m-(i-j)];
	    }
	    cout << sum << "\t";
	}
	
	cout << endl;
	
		for (int i =m-1;i>0;i--){
	    sum=0;
	    for (int j=0;j<i;j++){
	        sum+=matrix[m-(i-j)][j];
	    }
	    cout << sum << "\t";
	}

	cout << endl;
	system("pause");
	return 0;

}
