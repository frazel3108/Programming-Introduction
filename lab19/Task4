#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m, n;

	do {

		cout << "Введите количество строк и столбцов в матрице M x N ( M, N > 0) : ";
		cin >> m >> n;
		cout << endl;

	} while ((m < 0) || (n < 0));

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) {
		matrix[i] = new double[n];
	}

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cin >> matrix[i][j];
		}
	}

	for (int i = 0; i < (m-1); i++) {
		for (int k = i+1; k < m; k++) {
			if (matrix[i][0] > matrix[k][0]) {
				for (int j = 0; j < n; j++) {
					swap(matrix[i][j], matrix[k][j]);
				}
			}
		}
	}

	cout << "Результат : " << endl;
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << matrix[i][j] << ends;
		}
		cout << endl;
	}

	cout << endl;
	system("pause");
	return 0;

}
