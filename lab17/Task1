#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n, k = 0;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

	} while (n<0);

	int* array = new int[n];
	int* array_1 = new int[n];
	int* array_2 = new int[n];

	cout << "Введите элементы массива : ";

	for (int i = 0; i < n; i++) 
		cin >> array[i];

	array_1[k] = 1;
	array_2[k] = array[k];

	for (int i = 1; i < n; i++)
		if (array[i - 1] == array[i])
			array_1[k]++;
		else {
			k++;
			array_1[k] = 1;
			array_2[k] = array[i];
		}

	cout << endl;
	cout << "Результат : " << endl;

	for (int i = 0; i <= k; i++)
		cout << array_2[i] << " - " << array_1[i] << endl;

	cout << endl;
	system("pause");
	return 0;

}
