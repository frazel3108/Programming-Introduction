#include <iostream>
#include <string>
#include <cmath>
#include <windows.h>
#include <cstring>
#include <string.h>
using namespace std;

int main() {

	setlocale(0, "");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	string line;

	do {
		cout << "Введите предложение (Russian) : ";
		getline(cin, line);
	} while (line.empty());

	for (int i = 1; i < line.size(); i+=2) {
		cout << line[i];
	}
	
	if (line.size() % 2 == 1) {
		for (int i = line.size()-1; i >= 0; i -= 2) {
			cout << line[i];
		}
	} else {
		for (int i = line.size()-2; i >= 0; i -= 2) {
			cout << line[i];
		}
	}

	cout << endl;
	system("pause");
	return 0;

}
