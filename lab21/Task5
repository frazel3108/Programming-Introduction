#include <iostream>
#include <string>
#include <cmath>
#include <windows.h>
#include <cstring>
#include <string.h>
using namespace std;

int main() {

	setlocale(0, "");

	int p = 0;

	string line, name;

	do {
		cout << "Введите дирректорию файла (English) : ";
		getline(cin, line);
	} while (line.empty());

	p = line.rfind('\\') + 1;
	if (p == 0) {
		p = line.rfind('//') + 1;
	}

	while (line[p] != '.') {
		name += line[p];
		p++;
	}


	cout << endl;
	cout <<"Название вашего файла : "<< name << endl;

	cout << endl;
	system("pause");
	return 0;

}
