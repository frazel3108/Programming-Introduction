#include <iostream>
#include <string>
#include <cmath>
#include <windows.h>
#include <cstring>
#include <string.h>
#include <fstream>
using namespace std;

int main() {

	setlocale(0, "");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	int n, k;
	string name, dir = {"E:\\"};

	cout << "Введите название файла : ";
	getline(cin,name);

	dir += name + ".txt";

	do {
		cout << "Введите целые положительные числа N и K ( N, K > 0 ) : ";
		cin >> n >> k;
	} while ((n < 0) || (k < 0));

	ofstream in(dir);

	for (int i = 0; i < n; i++) {
		for (int j = 0; j < k; j++) {
			in << "*" << ends;
		}
		in << endl;
	}
	in.close();

	cout << endl;
	system("pause");
	return 0;

}
